<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanshang.li.mybaseframwork.record.OtherRecordActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始录制"/>

    <Button
        android:id="@+id/btn_pause_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停录制"/>

    <Button
        android:id="@+id/btn_finish_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="录制完成"/>

    <Button
        android:id="@+id/btn_start_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始播放"/>

    <Button
        android:id="@+id/btn_pause_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停播放"/>

    <Button
        android:id="@+id/btn_finish_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止播放"/>

</LinearLayout>
